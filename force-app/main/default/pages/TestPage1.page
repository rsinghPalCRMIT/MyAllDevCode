<apex:page standardController="Contact" extensions="apexContactController" lightningStylesheets="true">
     <apex:form >
         <apex:pageBlock >
             <apex:pageBlockSection >
                 <apex:inputField value="{!objCon.LastName}"/>
                 <apex:inputField value="{!objCon.Phone}"/>
                 <apex:inputField value="{!objCon.Account.Fax}"/>
             </apex:pageBlockSection>
              <apex:pageBlockButtons >
             <apex:commandButton value="Save" action="{!save}"/>
         </apex:pageBlockButtons>
         </apex:pageBlock>
     </apex:form>
</apex:page>